<!-- <%= render 'form', recipe: @recipe %> -->
<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.fields_for :ingredients do|ingredients_builder| %>
    <%= ingredients_builder.label :name %>
    <%= ingredients_builder.text_field :name %><br>
    <%= ingredients_builder.label :quantity %>
    <%= ingredients_builder.text_field :quantity %><br>
  <% end %>
  <%= f.submit %>
<% end %>
