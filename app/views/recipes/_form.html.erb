<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  Ingredients: 
    <%= f.fields_for :ingredients do |item| %>
      <%= item.label :name %>
      <%= item.text_field :name %><br>

      <%= item.label :quantity %>
      <%= item.text_field :quantity %><br>
      <% end %>
    <%= f.submit %>
<% end %>
